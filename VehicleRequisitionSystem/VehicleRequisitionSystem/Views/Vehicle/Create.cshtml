
@model VehicleRequisitionSystem.Models.Vehicle

@{
    ViewBag.Title = "Add Vehicle";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Add Vehicle Form
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Add Vehicle </li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">

            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <div class="col-md-7">
                    <!-- Horizontal Form -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Add Vehicle</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Vehicle Name</label>
                                @Html.TextBoxFor(model => model.VehicleName, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Vehicle Name" })
                                @Html.ValidationMessageFor(model => model.VehicleName)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Vehicle Number</label>
                                @Html.TextBoxFor(model => model.VehicleNo, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Vehicle No" })
                                @Html.ValidationMessageFor(model => model.VehicleNo)
                            </div>

                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        @Html.ActionLink("Cancel", "Index", "Vehicle", null, new { @type = "submit", @class = "btn btn-default" })

                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </div>
                <!-- /.box -->
                <!-- general form elements disabled -->
                <!-- /.box -->
            </div>
            <!-- /.Left col -->
            <!-- right col (We are only adding the ID to make the widgets sortable)-->
            <!-- right col -->
        </section>
    </div>
            <!-- /.row (main row) -->

        <!-- /.content -->



}



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

