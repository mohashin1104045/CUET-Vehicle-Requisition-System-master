
@model VehicleRequisitionSystem.Models.Driver

@{
    ViewBag.Title = "Edit Driver";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Edit Driver Form
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Edit Driver</li>
            </ol>
        </section>
        <!-- Main content -->
        <section class="content">

            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <div class="col-md-7">
                    <!-- Horizontal Form -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Edit Driver Form</h3>
                        </div>
                        <!-- /.box-header -->
                        <!-- form start -->

                        <div class="box-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Driver Name</label>
                                @Html.TextBoxFor(model => model.DriverName, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Driver Name" })
                                @Html.ValidationMessageFor(model => model.DriverName)
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mobile</label>
                                @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", @id = "exampleInputEmail1", @placeholder = "Mobile" })
                                @Html.ValidationMessageFor(model => model.Mobile)
                            </div>     
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            @Html.ActionLink("Cancel", "Index", "Driver", null, new { @type = "submit", @class = "btn btn-default" })

                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>

                    </div>
                    <!-- /.box -->
                    <!-- general form elements disabled -->
                    <!-- /.box -->
                </div>
                <!-- /.Left col -->
                <!-- right col (We are only adding the ID to make the widgets sortable)-->
                <!-- right col -->
            </div>
            <!-- /.row (main row) -->
        </section>
        <!-- /.content -->
    </div>
}

